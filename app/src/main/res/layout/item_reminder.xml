<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Icon -->
        <View
            android:id="@+id/view_bill_icon_bg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_soft_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/kings_blue"
            app:layout_constraintStart_toStartOf="@id/view_bill_icon_bg"
            app:layout_constraintEnd_toEndOf="@id/view_bill_icon_bg"
            app:layout_constraintTop_toTopOf="@id/view_bill_icon_bg"
            app:layout_constraintBottom_toBottomOf="@id/view_bill_icon_bg"
            android:contentDescription="Bill Icon" />

        <!-- Title & Date -->
        <TextView
            android:id="@+id/tv_bill_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Netflix Subscription"
            android:textColor="#2D3142"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/view_bill_icon_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_bill_amount"/>

        <TextView
            android:id="@+id/tv_bill_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Due: Oct 24, 2024"
            android:textColor="#FF3D00"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tv_bill_title"
            app:layout_constraintTop_toBottomOf="@id/tv_bill_title"
            app:layout_constraintEnd_toStartOf="@id/tv_bill_amount"/>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_bill_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$15.99"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>