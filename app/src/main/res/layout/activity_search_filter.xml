<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8FC"
    android:padding="24dp">

    <!-- 1. Header -->
    <TextView
        android:id="@+id/tv_title_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search &amp; Filter"
        android:textColor="#212121"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 2. Search Input -->
    <EditText
        android:id="@+id/et_search_keyword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input_field"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:hint="Search transactions..."
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_title_search" />

    <!-- 3. Transaction Type Filter -->
    <TextView
        android:id="@+id/lbl_filter_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Transaction Type"
        android:textColor="#757575"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search_keyword" />

    <LinearLayout
        android:id="@+id/layout_type_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lbl_filter_type">

        <CheckBox
            android:id="@+id/chip_all"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_chip_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="All"
            android:textColor="@color/selector_chip_text" />

        <CheckBox
            android:id="@+id/chip_income"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/selector_chip_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Income"
            android:textColor="@color/selector_chip_text" />

        <CheckBox
            android:id="@+id/chip_expense"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/selector_chip_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Expense"
            android:textColor="@color/selector_chip_text" />
    </LinearLayout>

    <!-- 4. Date Range -->
    <TextView
        android:id="@+id/lbl_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Date Range"
        android:textColor="#757575"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_type_chips" />

    <LinearLayout
        android:id="@+id/layout_dates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/lbl_date_range">

        <EditText
            android:id="@+id/et_date_from"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_input_field"
            android:clickable="true"
            android:focusable="false"
            android:hint="From"
            android:gravity="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_date_to"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_input_field"
            android:clickable="true"
            android:focusable="false"
            android:hint="To"
            android:gravity="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 5. Category Filter -->
    <TextView
        android:id="@+id/lbl_filter_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Category"
        android:textColor="#757575"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_dates" />

    <Spinner
        android:id="@+id/spinner_filter_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_input_field"
        app:layout_constraintTop_toBottomOf="@id/lbl_filter_category" />

    <!-- 6. Apply Button -->
    <Button
        android:id="@+id/btn_apply_filter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/kings_blue"
        android:text="Apply Filters"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>